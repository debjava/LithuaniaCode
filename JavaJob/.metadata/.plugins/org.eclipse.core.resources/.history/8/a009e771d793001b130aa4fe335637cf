package com.dds.dom.xml.test;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStream;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import javax.xml.parsers.ParserConfigurationException;

import org.w3c.dom.Document;
import org.w3c.dom.Element;
import org.xml.sax.SAXException;

import com.sun.org.apache.xerces.internal.impl.xpath.regex.ParseException;

public class TestDomParser1 
{
	public void showParsedData( final InputStream inStream_parm )
	{
		final Document document = getDoucment( inStream_parm );
	}
	
	private Document getDoucment( final InputStream inStream_parm )
	{
		Document document = null;
		try
		{
			DocumentBuilderFactory docBuilderFact = DocumentBuilderFactory.newInstance();
			DocumentBuilder docBuilder = docBuilderFact.newDocumentBuilder();
			document = docBuilder.parse( inStream_parm );
		}
		catch( SAXException se )
		{
			se.printStackTrace();
		}
		catch( ParserConfigurationException pce )
		{
			pce.printStackTrace();
		}
		catch( IOException ie )
		{
			ie.printStackTrace();
		}
		return document;
	}
	
	private void showData( final Element element_parm )
	{
		
	}
	
	public static void main(String[] args) 
	{
		TestDomParser1 parser1 = new TestDomParser1();
		try
		{
			final InputStream inStream = new FileInputStream("E:/data/domparsingData/wfinit-config.xml");
			parser1.showParsedData(inStream);
			
		}
		catch( FileNotFoundException fnfe )
		{
			System.out.println("The file was not found in the appropriate location ...............");
			fnfe.printStackTrace();
		}
		catch( Exception e)
		{
			System.out.println(" @@@@@@@@@@ Different Exception thrown @@@@@@ ");
			e.printStackTrace();
		}
	}

}
